# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=true
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3
# Alternative models: mistral, phi3, qwen2, llama3.1

# Chess Engine Paths
STOCKFISH_PATH=/usr/local/bin/stockfish
# Leave empty for auto-detection
MAIA_PATH=

# Lichess API (Optional - for game import/export)
LICHESS_API_TOKEN=
LICHESS_USERNAME=

# Chess.com API (Optional)
CHESSCOM_USERNAME=

# Database
DATABASE_URL=sqlite+aiosqlite:///./chess_learning.db
# For PostgreSQL: postgresql+asyncpg://user:password@localhost/chess_learning

# Training Configuration
DEFAULT_PLAYER_ELO=1200
SRS_REVIEW_INTERVALS=1,3,7,14,30  # Days for spaced repetition
PUZZLE_DIFFICULTY_RANGE=200  # ELO range for puzzle selection

# LLM Persona Configuration
DEFAULT_PERSONA=friendly_teacher
# Options: grandmaster, friendly_teacher, aggressive_rival

# Analytics
TRACK_DETAILED_ANALYTICS=true
AUTO_GENERATE_REPORTS=true
WEEKLY_REPORT_DAY=sunday

# Security
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
